<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <TextView
            android:id="@+id/tv_added_channel_label"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_centerInParent="true"
            android:layout_margin="4dp"
            android:background="@drawable/bg_channel"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center" />

        <ImageView
            android:id="@+id/image_add"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignTop="@+id/tv_added_channel_label"
            android:layout_alignEnd="@+id/tv_added_channel_label"
            android:layout_margin="2dp"
            android:src="@drawable/ic_common_add" />

    </RelativeLayout>
</layout>